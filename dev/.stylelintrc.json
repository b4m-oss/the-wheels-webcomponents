{
  "extends": [
    "stylelint-config-standard",
    "stylelint-scss"
  ],
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "color-no-invalid-hex": true,
    "block-no-empty": true,
    "unit-no-unknown": true,
    "scss/dollar-variable-pattern": "^([a-z0-9]*)([A-Z0-9])*$",
    "scss/at-mixin-pattern": "^([a-z0-9]*)([A-Z0-9])*$"
  }
}
